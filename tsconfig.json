{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "emitDeclarationOnly": true,
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
	"verbatimModuleSyntax": true,
    "types": ["@types/node"],
    "paths": {
      "@common/*": ["./common/*"],
      "fivem/*": ["./fivem/*"],
      "redm/*": ["./redm/*"],
      "@common-game/*": ["./common-game/*"],
      "server/*": ["./server/*"],
    }
  },
  "include": ["src/**/*"],
  "files": ["./src/global.d.ts"],
  "exclude": ["node_modules", "lib", "**/examples/"],
  "references": [
    { "path": "./src/server" },
    { "path": "./src/fivem" },
    { "path": "./src/common-game" },
    { "path": "./src/redm" }
  ]
}
