{
  "name": "@nativewrappers/fivem",
  "description": "Javascript/Typescript wrapper for the FiveM natives",
  "contributors": [
    "Remco Troost <d0p3t>",
    "Dillon Skaggs <AvarianKnight>",
    "Linden <thelindat>"
  ],
  "private": true,
  "license": "MIT",
  "type": "module",
  "version": "0.0.81",
  "publishConfig": {
    "directory": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nativewrappers/nativewrappers.git"
  },
  "bugs": {
    "url": "https://github.com/nativewrappers/nativewrappers/issues"
  },
  "homepage": "https://fivemjs.avarian.dev/",
  "keywords": [
    "fivem",
    "wrapper",
    "javascript",
    "typescript",
    "citizenfx"
  ],
  "files": [
    "./**/*.js",
    "./**/*.d.ts"
  ],
  "scripts": {
    "delete": "rm -rf lib",
    "build": "pnpm delete && tsc --build && node build.js",
    "watch": "tsc --watch",
    "check": "pnpm biome format",
    "format": "pnpm biome format --write",
    "lint": "pnpm biome lint --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@citizenfx/client": "2.0.13079-1",
    "@citizenfx/server": "2.0.13079-1",
    "@types/node": "^22.13.7",
    "buffer": "^6.0.3",
    "esbuild": "^0.25.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.11",
    "typedoc": "^0.27.9",
    "typedoc-fivemjs-theme": "^0.2.7",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.2"
  }
}
